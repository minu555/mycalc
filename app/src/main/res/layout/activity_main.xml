<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="30dp"
            android:background="@color/white"
            android:text="2+3"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:textSize="30dp"
            android:textAlignment="textEnd"
            android:id="@+id/workingText"/>
        <TextView

            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="30dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textAlignment="textEnd"
            android:text="5"
            android:textSize="45sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="C"
                android:onClick="clearOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="()"
                android:onClick="bracketOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="^"
                android:onClick="powerofOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="/"
                android:onClick="divisionOnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="7"
                android:onClick="sevenOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="8"
                android:onClick="eightOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="9"
                android:onClick="nineOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="*"
                android:onClick="multiplyOnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="4"
                android:onClick="fourOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="5"
                android:onClick="fiveOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="6"
                android:onClick="sixOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="-"
                android:onClick="minusOnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="1"
                android:onClick="oneOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="2"
                android:onClick="twoOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="3"
                android:onClick="threeOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="+"
                android:onClick="plusOnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="."
                android:onClick="decimalOnClick"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:textColor="@color/white"
                android:text="0"
                android:onClick="zeroOnClick"/>

            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="40sp"
                android:background="@color/dark_orange"
                android:textColor="@color/white"
                android:text="="
                android:onClick="equalOnClick"/>
        </LinearLayout>





    </LinearLayout>
</LinearLayout>